@using ItLabs.MBox.Application.Models

@using ItLabs.MBox.Domain.Managers
@inject S3Manager  _s3Manager
@model PagingModel<Artist>
@{
    Layout = null;
}

@foreach (Artist artist in Model.PagingList)
{
    <li class="col-sm-2 table-bordered" style="margin: 3.2%">
        <div>
            <div class="row">
                <div>
                    <div class="text-center text">
                        <h5>@artist.User.Name</h5>
                    </div>
                </div>
            </div>
            <div class="row">
                <div>
                    <img class="img-circle img-responsive artistAlign artistImage" src="@_s3Manager.GetImageLink(artist.User.Picture)" />
                </div>
            </div>
            <div class="row">
                <div>
                    <div class="text-center text">
                        @if (!artist.IsDeleted)
                        {
                            <h5>@artist.RecordLabelName</h5>
                        }
                    </div>
                </div>
            </div>
        </div>
    </li>
}

