        <div class="col-md-3 col-sm-3" style="margin-top: 25px; margin-left: 20px; margin-right: 20px">
            <div class="row" style="text-align: center">
                <h3>We cooperate with</h3>
            </div>
            <div class="row" style="border: 1px solid black; height: 720px; padding: 7px">
                <ul style="text-align: center; list-style: none; margin-left: auto; margin-right: auto; width: 90%; padding: 0px; max-height: 700px; overflow: scroll; -webkit-overflow-scrolling: touch;">
                    @foreach (RecordLabel recordLabel in Model.WeCooperateWith)
                    {
                        <li style="margin-top: 5px;">- @recordLabel.User.Name</li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-4 col-sm-4" style="margin-top: 25px; margin-right: 0px">
            <div class="row" style="text-align: center">
                <H3>Contact information</H3>
            </div>
            <div class="row" style="text-align: center">
                <div class="row">
                    <p class="col-md-4 col-sm-4 col-xs-4" style="text-align: right">Tel:</p>
                    <p class="col-md-8 col-sm-8 col-xs-8" style="text-align: left">02 1234 1234</p>
                </div>
                <div class="row">
                    <p class="col-md-4 col-sm-4 col-xs-4" style="text-align: right">E-mail:</p>
                    <p class="col-md-8 col-sm-8 col-xs-8" style="text-align: left">example@example.com</p>
                </div>
                <div class="row">
                    <p class="col-md-4 col-sm-4 col-xs-4" style="text-align: right">Addres:</p>
                    <p class="col-md-8 col-sm-8 col-xs-8" style="text-align: left">Str. "example", No. 198, Town</p>
                </div>
            </div>
            <div class="row">
                <form style="border: 1px solid black; padding: 20px" method="post">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Name</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">E-mail</label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Message" class="control-label" for="Message">Message</label>
                        <textarea asp-for="Message" class="form-control" style="height: 250px" name="Message" id="Message" aria-describedby="text-counter" maxlength="250"> </textarea>
                    </div>
                    <p style="margin-top: -10px" id="text-counter">Characters left: <span id="counter">250</span></p>
                    <button type="submit" value="submit" class="btn btn-block btn-primary">Submit</button>
                </form>
            </div>
        </div>
