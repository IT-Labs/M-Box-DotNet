
@{
    ViewData["Title"] = "About";
}

@model AboutViewModel


@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#Message').keyup(function (e) {
                var max = 250;
                var len = $(this).val().length;
                var char = max - len;
                $('#counter').html(char);
            });
        });
    </script>
}

