<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@inject UserManager<ApplicationUser> UserManager
@using ItLabs.MBox.Contracts.Enums
@using ItLabs.MBox.Application.Models.ArtistsViewModel

@{
    ViewData["Title"] = "AddNewSong";
    var user = await UserManager.GetUserAsync(User);
}

@model AddNewSongViewModel

<div class="container-fluid">
    <hr />
    <div class="row">
        <div class="col-md-4 col-sm-4">
        </div>
        <div class="col-md-8 col-sm-8">
            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <form asp-area="" asp-controller="Artists" asp-action="Index" method="get">
                        <button type="submit" class="btn btn-block btn-default" style="margin: 5px">Cancel</button>
                    </form>
                </div>
                <div class="col-md-6 col-sm-6">
                    <form asp-area="" asp-controller="Artists" asp-action="AddNewSong" method="post">
                        <button type="submit" class="btn btn-block btn-primary" style="margin: 5px">Publish</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <hr />

    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="row" style="margin: 15px">
                <input class="form-control" placeholder="Song Name" id="songName">
            </div>
            <div class="row" style="margin: 15px">
                song logo
            </div>
            <div class="row" style="margin: 15px">
                <label>By: @user.Name</label>
            </div>
            <div class="row" style="margin: 15px">
                <div class="col-md-2 col-sm-2">
                    <label>Album Name:</label>
                </div>
                <div class="col-md-6 col-sm-6">
                    <input class="form-control" placeholder="Album Name" id="albumName">
                </div>
            </div>
            <div class="row" style="margin: 15px">
                <div class="col-md-4 col-sm-3" style="margin-top: 5px">
                    <label>Genre:</label>
                </div>
                <div class="col-md-6 col-sm-6">
                    @Html.DropDownList("Genres", new SelectList(Enum.GetValues(typeof(Genres))), "", new { @class = "form-control" })
                </div>
            </div>
            <div class="row" style="margin: 15px">
                <div class="col-md-3 col-sm-3" style="margin-top: 5px">
                    <label>Release Date:</label>
                </div>
                <div class="col-md-7 col-sm-7">
                    <input class="form-control" type="date" />
                </div>
            </div>
            <div class="row" style="margin: 15px">
                <div class="col-md-6 col-sm-6">
                    <div class="row" style="text-align: center">
                        <label>Vimeo</label>
                    </div>

                    <div class="row" style="padding: 8px">
                        <input class="form-control" placeholder="Youtube Link" id="youtubeLinkUrl">
                    </div>
                </div>

                <div class="col-md-6 col-sm-6" style="border-left: solid 2px #d3d3d3">
                    <div class="row" style="text-align: center">
                        <label>Vimeo</label>
                    </div>
                    <div class="row" style="padding: 8px">
                        <input class="form-control" placeholder="Vimeo Link" id="vimeoLinkUrl">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-6" style="border-left: solid 2px #d3d3d3">
            <div class="row" style="text-align: center">
                <label>Song Lyrics</label>
            </div>
            <div class="row" style="padding: 12px;">
                <textarea class="form-control" maxlength="10000" style="margin-top: 5px; height: 550px; resize: none" name="Message" id="songLyrics"></textarea>
            </div>
        </div>
    </div>

</div>